{
  "rules": {
    "curly": [2],
    "dot-location": [2, "property"],
    "dot-notation": [2],
    "eqeqeq": [2, "smart"],
    "indent": [2, 2, { "SwitchCase": 1 }],
    "linebreak-style": [2, "unix"],
    "no-const-assign": [2],
    "no-lonely-if": [2],
    "no-spaced-func": [2],
    "no-this-before-super": [2],
    "no-unneeded-ternary": [2],
    "no-var": [1],
    "object-curly-spacing": [2, "always"],
    "object-shorthand": [2],
    "prefer-const": [2],
    "prefer-spread": [2],
    "prefer-template": [2],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "space-before-function-paren": [2, "never"],
    "space-in-parens": [2, "never"]
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    "jsx": true,
    "experimentalObjectRestSpread": true,
    "modules": true
  },
  "plugins": [
    "react"
  ],
  "globals": {}
}
